@model LojaConecta.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Categoria</h1>
<h4 class="mb-4">Details</h4>

<div class="card my-4 border-2 rounded-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-lg-8">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control border-2 rounded-3 p-2" readonly>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <label for="Preview" class="form-label">Pr√©via</label>
                <img src='@(Model.Foto ?? @Url.Content("~/img/sem imagem.png"))' id="Preview" class="img-fluid">
            </div>
        </div>
        <div class="d-flex mt-4">
            <a asp-action="Edit" class="btn btn-outline-warning me-2">
                <i class="fas fa-edit me-1"></i> Alterar
            </a>
            <a asp-action="Index" class="btn btn-outline-info">
                <i class="fas fa-home me-1"></i> Voltar
            </a>
        </div>
    </div>

</div>
</div>